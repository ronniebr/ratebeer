<h1>Listing beers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
      <th>Brewery</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer %></td>
        <td><%= beer.style %></td>
        <td><%= link_to beer.brewery.name, beer.brewery%></td>
        <td><%= link_to( 'Edit', edit_beer_path(beer)) if current_user %></td>
        <td><%= link_to( 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' }) if current_user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to( 'New Beer', new_beer_path) if current_user %>
<p><%= link_to 'List of breweries', breweries_path %></o>
